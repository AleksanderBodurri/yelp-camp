<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit Campground</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
                <div class="form-group">
                     <input class="form-control" type="text" value="<%=campground.name%>" name="cg[name]">
                </div>
                <div class="form-group">
                     <input class="form-control" type="number" value="<%=campground.price%>" name="campground[price]" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                     <input class="form-control" type="text" value="<%=campground.image%>" name="cg[image]">
                </div>
                  <div class="form-group">
                     <input class="form-control" type="text" value="<%=campground.description%>" name="cg[description]" >
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Back to camps</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>